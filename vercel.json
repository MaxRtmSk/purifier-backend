{
    "version": 2,
    "env": {
        "POSTGRES_HOST": "@db_host",
        "POSTGRES_PORT": "@db_port",
        "POSTGRES_DB": "@db_db",
        "POSTGRES_USER": "@db_user",
        "POSTGRES_PASSWORD": "@db_password"
    },
    "builds": [
        {
            "src": "src/main.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "src/main.ts",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "DELETE"
            ]
        }
    ]
}